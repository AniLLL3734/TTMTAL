// KURAL DOSYASI: firestore.rules (TÜM İÇERİĞİ BUNUNLA DEĞİŞTİRİN)

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- USERS KOLEKSİYONU ---
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- GAMES & YORUMLAR ---
    match /games/{gameId} {
      allow read: if true;
      allow update: if request.auth != null;
      allow create, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      match /comments/{commentId} {
          allow read: if true;
          allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
          allow delete: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || resource.data.uid == request.auth.uid);
      }
    }
    
    // --- GERİ BİLDİRİM ---
    match /feedback/{feedbackId} {
      allow create: if request.auth != null;
      allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- GENEL SOHBET & META ---
    match /chat_meta/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (
        request.resource.data.uid == request.auth.uid || 
        (request.resource.data.uid == 'system' && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
      allow delete: if request.auth != null && (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' || resource.data.uid == request.auth.uid);
    }

    // ==========================================================
    //            NİHAİ VE DOĞRU ÇALIŞAN DM KURALLARI
    // ==========================================================
    match /chats/{chatId} {
      // Ana sohbet belgesine okuma/yazma izni:
      // Kural: Giriş yapmış kullanıcının UID'si, belgenin ID'sinin ('chatId') bir parçası olmalıdır.
      allow read, write: if request.auth != null && request.auth.uid in chatId.split('_');

      // 'messages' alt koleksiyonuna erişim izni
      match /messages/{messageId} {
        
        // Mesajları okuma izni:
        allow read: if request.auth != null && request.auth.uid in chatId.split('_');
        
        // Mesaj OLUŞTURMA izni (En Güvenli Yöntem):
        allow create: if request.auth != null
                      && request.auth.uid in chatId.split('_')
                      && request.resource.data.senderId == request.auth.uid;
        
        // Bu sohbetlerde mesajları düzenleme veya silmeye izin vermiyoruz.
        allow update, delete: if false;
      }
    }
  }
}
